<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.bignerdranch.blastermind.android.blastermind">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".BlastermindApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_mainicon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".controller.GameActivity"/>

        <activity
            android:name=".controller.GamePendingActivity"
            android:noHistory="true"/>

        <activity
            android:name=".controller.CreateMatchActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

    </application>

</manifest>
