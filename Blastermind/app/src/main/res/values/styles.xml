<resources>

    <style name="AppTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/material_light</item>
        <item name="colorPrimaryDark">@color/material_dark</item>
        <item name="colorAccent">@color/blue</item>
    </style>

    <style name="SquareButton" parent="android:Widget.Button">
        <!-- height = width -->
        <item name="android:minHeight">3dp</item>
        <item name="android:minWidth">3dp</item>
    </style>

    <style name="CustomEditText" parent="AppTheme">
        <item name="android:textColor">@color/light_text</item>
        <item name="android:textColorHint">@color/light_text</item>
    </style>

    <!-- app compat doesn't style buttons -->
    <style name="CustomButton" parent="android:Widget.Holo.Button"/>

</resources>
